<%- include("header") -%>


  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>


  <div class="box">
    <% for (let i = 0; i < newListItems.length; i++) { %>
    <div class="item">
      <input type="checkbox">
      <span> <%= newListItems[i] %> </span>
    </div>
    <% } %>


    <form class="item" action="/" method="post">
      <input type="text" id="task" name="newItem" placeholder="New item" autocomplete="off">
      <label for="task"></label>
      <button type="submit" name="list" value=<%= listTitle %> >+</button>
    </form>
  </div>

<%- include("footer") -%>
